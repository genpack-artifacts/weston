{
    packages: [
        "genpack/paravirt",

        "dev-libs/weston",
        "sys-auth/seatd", // weston requests seatd

        // japanese support
        "media-fonts/noto-cjk",
        "app-i18n/mozc",
        "app-i18n/fcitx-gtk",

        // we can do alomost anything with this stuff
        "www-client/google-chrome",
    ],
    use: {
        // weston
        "sys-auth/seatd": "server",

        // japanese input
        "app-i18n/mozc": "fcitx5 -gui", // disable gui support to avoid pulling qt5 deps
        "app-i18n/fcitx": "-X wayland", // disable X support to avoid pulling X deps
        "app-i18n/fcitx-gtk": "-X", // disable X support to avoid pulling X deps
        "x11-libs/libxkbcommon": "wayland",

        // google-chrome
        "x11-libs/gtk+": "wayland", // gtk+ with wayland support is needed by google-chrome when opening gtk dialogs
        "gui-libs/gtk": "-X wayland", // disable X support to avoid pulling X deps
        "media-libs/mesa": "wayland", // gtk+ with wayland support requests mesa to support wayland
    },
    license: {
        "www-client/google-chrome": "google-chrome"
    },
    users: [
        {
            name: "user",
            uid: 1000,
            empty_password: true,
            additional_groups: ["seat"],
        }
    ],
    services: ["seatd"]
}
