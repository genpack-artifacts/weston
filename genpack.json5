{
    packages: [
        "genpack/paravirt",

        "dev-libs/weston",
        "gui-apps/tuigreet", // a simple greeter
        "x11-apps/mesa-progs",

        // japanese support
        "media-fonts/noto-cjk",
        "app-i18n/mozc",
        "app-i18n/fcitx-gtk",

        // we can do alomost anything with this stuff
        "www-client/google-chrome",
    ],
    accept_keywords: {
        "gui-apps/tuigreet": null
    },
    use: {
        "x11-apps/mesa-progs": "-X wayland gles2 vulkan",
        // greeter
        "sys-apps/systemd": "policykit", // to allow system shutdown/reboot from greetd

        // japanese input
        "app-i18n/mozc": "fcitx5 -gui", // disable gui support to avoid pulling qt5 deps
        "app-i18n/fcitx": "-X wayland", // disable X support to avoid pulling X deps
        "app-i18n/fcitx-gtk": "-X", // disable X support to avoid pulling X deps
        "x11-libs/libxkbcommon": "wayland",

        // google-chrome
        "x11-libs/gtk+": "wayland", // gtk+ with both X and wayland support is needed by google-chrome when opening gtk dialogs
        "gui-libs/gtk": "-X wayland", // disable X support to avoid pulling X deps
        "media-libs/mesa": "wayland vulkan VIDEO_CARDS: virgl zink", // gtk+ with wayland support requests mesa to support wayland
    },
    license: {
        "www-client/google-chrome": "google-chrome"
    },
    users: [
        {
            name: "user",
            uid: 1000,
            empty_password: true,
        }
    ],
    services: ["greetd"]
}
